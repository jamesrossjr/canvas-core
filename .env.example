# ===============================
# Canvas Digital Workspace Configuration
# ===============================
# Copy this file to .env.local for development

# ===============================
# NUXT CORE CONFIGURATION
# ===============================
# Production license for @nuxt/ui-pro, get one at https://ui.nuxt.com/pro/purchase
NUXT_UI_PRO_LICENSE=
# Password for nuxt-auth-utils (minimum 32 characters)
NUXT_SESSION_PASSWORD=

# ===============================
# DATABASE CONFIGURATION
# ===============================
DATABASE_URL="postgresql://user:password@localhost:5432/canvas_dev"
SUPABASE_URL="https://your-project.supabase.co"
SUPABASE_ANON_KEY="your-anon-key"
SUPABASE_SERVICE_ROLE_KEY="your-service-role-key"

# ===============================
# AI SERVICE CONFIGURATION
# ===============================
# OpenAI Configuration
OPENAI_API_KEY="sk-proj-..."
OPENAI_MODEL="gpt-4-turbo-preview"
OPENAI_MAX_TOKENS="4096"

# Anthropic Claude Configuration
ANTHROPIC_API_KEY="sk-ant-api03-..."
ANTHROPIC_MODEL="claude-3-sonnet-20240229"

# Google Gemini Configuration
GOOGLE_API_KEY="AIzaSyC..."
GEMINI_MODEL="gemini-pro"

# Ollama Local Configuration
OLLAMA_API_URL="http://localhost:11434"
OLLAMA_MODEL="llama2:7b"

# Optional, Cloudflare AI Gateway ID
NUXT_CLOUDFLARE_GATEWAY_ID=

# AI Fallback Configuration
AI_PRIMARY_PROVIDER="openai"
AI_FALLBACK_PROVIDERS="claude,gemini,ollama"
AI_REQUEST_TIMEOUT="30000"
AI_RETRY_ATTEMPTS="3"

# ===============================
# REAL-TIME SERVICES
# ===============================
# Socket.io Configuration
SOCKET_IO_URL="ws://localhost:3001"
SOCKET_IO_PATH="/socket.io/"
SOCKET_IO_TRANSPORTS="websocket,polling"
SOCKET_IO_TIMEOUT="20000"

# WebSocket Configuration
WS_HEARTBEAT_INTERVAL="25000"
WS_RECONNECT_ATTEMPTS="5"
WS_RECONNECT_DELAY="1000"

# ===============================
# AUTHENTICATION & SECURITY
# ===============================
# OAuth Configuration
# GitHub OAuth client ID
NUXT_OAUTH_GITHUB_CLIENT_ID=
# GitHub OAuth client secret
NUXT_OAUTH_GITHUB_CLIENT_SECRET=
# Google OAuth (additional)
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# Security Headers
CSP_REPORT_URI="/api/security/csp-report"
HSTS_MAX_AGE="31536000"

# ===============================
# APPLICATION SETTINGS
# ===============================
PUBLIC_APP_NAME="Canvas"
PUBLIC_APP_URL="http://localhost:3000"
PUBLIC_API_URL="http://localhost:3000/api"

# Features Flags
ENABLE_3D_WORKSPACE="true"
ENABLE_COLLABORATION="true"
ENABLE_IDE_FEATURES="true"
ENABLE_AI_ASSISTANT="true"

# Performance Settings
MAX_BLOCKS_PER_DOCUMENT="10000"
MAX_FILE_SIZE="10485760"
MAX_WORKSPACE_SIZE="1073741824"

# ===============================
# MONITORING & ANALYTICS
# ===============================
SENTRY_DSN="https://..."
SENTRY_ENVIRONMENT="development"
GOOGLE_ANALYTICS_ID="G-..."