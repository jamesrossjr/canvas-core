# Canvas Digital Workspace - Environment Configuration
# Copy this file to .env and fill in your actual values

# ===========================================
# Application Configuration
# ===========================================
NODE_ENV=development
NUXT_APP_BASE_URL=http://localhost:3000

# ===========================================
# Database Configuration
# ===========================================
DATABASE_URL=file:./database/sqlite.db

# ===========================================
# Supabase Configuration
# ===========================================
# Get these from your Supabase project dashboard
NUXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co
NUXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# ===========================================
# Security Configuration
# ===========================================
# Generate a strong 256-bit secret key for JWT and sessions
NUXT_SECRET_KEY=your-256-bit-secret-key-here

# CSRF protection secret (generate a random string)
CSRF_SECRET=your-csrf-secret-here

# ===========================================
# AI Services (Optional)
# ===========================================
# For ATHENA AI assistant and enhanced features
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key

# ===========================================
# Performance Monitoring
# ===========================================
# For Web Vitals and performance analytics
PERFORMANCE_API_ENDPOINT=https://your-monitoring-service.com/api
PERFORMANCE_API_KEY=your-monitoring-api-key

# ===========================================
# Email Configuration (Optional)
# ===========================================
# For notifications and transactional emails
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# ===========================================
# CDN Configuration (Production)
# ===========================================
# For serving static assets and images
CDN_BASE_URL=https://your-cdn.com
STATIC_ASSETS_URL=https://your-cdn.com/assets

# ===========================================
# Real-time Features
# ===========================================
# Socket.io configuration
SOCKET_IO_PORT=3001
SOCKET_IO_CORS_ORIGIN=http://localhost:3000

# ===========================================
# File Storage (Production)
# ===========================================
# For document attachments and user uploads
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
S3_BUCKET_NAME=canvas-uploads

# ===========================================
# Analytics (Optional)
# ===========================================
# Google Analytics
GA_MEASUREMENT_ID=G-XXXXXXXXXX

# PostHog Analytics
POSTHOG_PROJECT_API_KEY=your-posthog-key
POSTHOG_HOST=https://app.posthog.com

# ===========================================
# Development Configuration
# ===========================================
# Enable debug logging in development
DEBUG=canvas:*

# Log level (error, warn, info, debug)
LOG_LEVEL=info

# Enable TypeScript strict mode
NUXT_TYPESCRIPT_TYPECHECK=true

# ===========================================
# Nuxt UI Pro (Required for Production)
# ===========================================
# Purchase license at https://ui.nuxt.com/pro/pricing
NUXT_UI_PRO_LICENSE=your-license-key-here

# ===========================================
# Advanced Configuration
# ===========================================
# Redis for session storage and caching (Production)
REDIS_URL=redis://localhost:6379

# Database connection pool settings
DATABASE_MAX_CONNECTIONS=10
DATABASE_IDLE_TIMEOUT=30000

# Rate limiting configuration
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# Session configuration
SESSION_TIMEOUT=86400000  # 24 hours in milliseconds
SESSION_SECURE=false      # Set to true in production with HTTPS

# CORS configuration for production
CORS_ORIGIN=https://your-domain.com
CORS_CREDENTIALS=true

# ===========================================
# Feature Flags
# ===========================================
# Enable/disable features
FEATURE_AI_ASSISTANT=true
FEATURE_REAL_TIME_COLLABORATION=true
FEATURE_VERSION_HISTORY=true
FEATURE_TERMINAL_ACCESS=true
FEATURE_PERFORMANCE_MONITORING=true

# ===========================================
# Development Tools
# ===========================================
# Nuxt DevTools
NUXT_DEVTOOLS=true

# Hot Module Replacement
NUXT_HMR=true

# Source maps in development
NUXT_SOURCEMAP=true
